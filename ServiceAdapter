import android.content.res.ColorStateList
import android.view.LayoutInflater
import android.view.View
import android.view.ViewGroup
import android.widget.ImageView
import android.widget.TextView
import androidx.core.content.ContextCompat
import androidx.recyclerview.widget.RecyclerView
import com.google.android.material.button.MaterialButton
import com.google.android.material.switchmaterial.SwitchMaterial
import java.text.NumberFormat
import java.util.*

class ServiceAdapter(
    private var services: List<Service>,
    private val onEditClick: (Service) -> Unit,
    private val onDeleteClick: (Service) -> Unit,
    private val onActiveToggle: (Service, Boolean) -> Unit
) : RecyclerView.Adapter<ServiceAdapter.ServiceViewHolder>() {

    private var filteredServices: List<Service> = services

    class ServiceViewHolder(view: View) : RecyclerView.ViewHolder(view) {
        val imgServiceIcon: ImageView = view.findViewById(R.id.imgServiceIcon)
        val tvServiceName: TextView = view.findViewById(R.id.tvServiceName)
        val tvCategory: TextView = view.findViewById(R.id.tvCategory)
        val tvDuration: TextView = view.findViewById(R.id.tvDuration)
        val tvDescription: TextView = view.findViewById(R.id.tvDescription)
        val tvPrice: TextView = view.findViewById(R.id.tvPrice)
        val switchActive: SwitchMaterial = view.findViewById(R.id.switchActive)
        val btnEdit: MaterialButton = view.findViewById(R.id.btnEdit)
        val btnDelete: MaterialButton = view.findViewById(R.id.btnDelete)
    }

    override fun onCreateViewHolder(parent: ViewGroup, viewType: Int): ServiceViewHolder {
        val view = LayoutInflater.from(parent.context)
            .inflate(R.layout.item_service, parent, false)
        return ServiceViewHolder(view)
    }

    override fun onBindViewHolder(holder: ServiceViewHolder, position: Int) {
        val service = filteredServices[position]
        
        holder.tvServiceName.text = service.name
        holder.tvCategory.text = service.category
        holder.tvDuration.text = "⏱ ${service.duration} min"
        holder.tvDescription.text = service.description
        holder.tvPrice.text = formatCurrency(service.price)
        
        // Switch de activo/inactivo
        holder.switchActive.isChecked = service.isActive
        holder.switchActive.setOnCheckedChangeListener { _, isChecked ->
            onActiveToggle(service, isChecked)
        }
        
        // Cambiar opacidad si está inactivo
        holder.itemView.alpha = if (service.isActive) 1.0f else 0.6f
        
        // Botones
        holder.btnEdit.setOnClickListener {
            onEditClick(service)
        }
        
        holder.btnDelete.setOnClickListener {
            onDeleteClick(service)
        }
    }

    override fun getItemCount() = filteredServices.size

    private fun formatCurrency(amount: Double): String {
        val format = NumberFormat.getCurrencyInstance(Locale("es", "CL"))
        return format.format(amount)
    }

    fun filter(query: String) {
        filteredServices = if (query.isEmpty()) {
            services
        } else {
            services.filter {
                it.name.contains(query, ignoreCase = true) ||
                it.description.contains(query, ignoreCase = true) ||
                it.category.contains(query, ignoreCase = true)
            }
        }
        notifyDataSetChanged()
    }

    fun updateServices(newServices: List<Service>) {
        services = newServices
        filteredServices = newServices
        notifyDataSetChanged()
    }
}
